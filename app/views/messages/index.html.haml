%html
  %body
    .chat-side
      .header
        .name
          = current_user.name
        .ul.icons
          .li.list
            = link_to new_group_path do
              = fa_icon 'edit', class: 'icon'
          .li.list
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'

      .groups
        - current_user.groups.each do |group|
          .group
            = link_to group_messages_path(group) do
              .group__name
                = group.name
              .group__message
                メッセージはありません。

    .chat-main
      .chat-main__header
        .chat-main__header__left
          .chat__name sample group
          .chat__member Member: taro

        .chat-main__header__right
          .chat-edit Edit

      .chat-main__contents

        .ul.message
          .li.user__name taro
          .li.date その時間
          .text 本文

        .ul.message
          .li.user__name taro
          .li.date その時間
          .text 本文

      .form
        = form_for [@group, @message] do |f|
          = f.text_field :text, class: 'form__message', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__submit'
